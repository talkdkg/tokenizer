<?xml version="1.0"?>
<html t:inherit="module:/templates/layout/layout.xml"
      xmlns:t="http://kauriproject.org/template">

  <t:init>
    <!-- In prototype mode, the template is executed directly, and pulls in
         the data it needs itself. In production mode, the data will be
         supplied from the resource class (PersonResource).
         -->
    <t:variable name="person" src="service:/data/persons/${request.attributes.id}" overwrite="false" accept="application/json"/>
  </t:init>

  <t:block name="title">Person: ${person.name}</t:block>

  <t:block name="content">
    <h2>Person: ${person.name}</h2>

    <p>City: ${person.city}</p>

    <p><b>Hint:</b> If you see as name "Mr. Production" above, try starting Kauri with the
    option "-p prototype" to switch to prototype mode.</p>
  </t:block>

</html>