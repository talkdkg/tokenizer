<?xml version="1.0"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:kauri="http://kauriproject.org/runtime/1.0#springext"
  xmlns:context="http://www.springframework.org/schema/context"
  xsi:schemaLocation="http://www.springframework.org/schema/beans
                             http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
                             http://www.springframework.org/schema/context
                             http://www.springframework.org/schema/context/spring-context-2.5.xsd
                             http://kauriproject.org/runtime/1.0#springext
                             http://www.kauriproject.org/schemas/runtime/springext.xsd"
>
  <context:annotation-config/>
  <kauri:module restletContext="restletContext" classLoader="moduleClassLoader" handle="module" conf="confRegistry"/>
  <bean class="org.kauriproject.runtime.rapi.ConfPlaceholderConfigurer">
    <constructor-arg ref="confRegistry"/>
  </bean>
  <kauri:module restletContext="restletContext" classLoader="moduleClassLoader" handle="module"/>
  <kauri:import-service id="representationBuilder" service="org.kauriproject.representation.build.RepresentationBuilder"/>
  <kauri:import-service id="routingService" service="org.kauriproject.routing.RoutingService"/>
  <kauri:import-service id="templateService" service="org.kauriproject.template.service.TemplateService"/>
  <kauri:import-restservice name="forms"/>
  <kauri:import-restservice name="jquery"/>
  <kauri:export-restservice ref="main"/>
  <bean factory-bean="representationBuilder" factory-method="install">
    <constructor-arg ref="module"/>
  </bean>
  <bean id="main" factory-bean="routingService" factory-method="createRouter">
    <constructor-arg ref="restletContext"/>
    <constructor-arg ref="module"/>
    <constructor-arg>
      <bean class="org.kauriproject.routing.RoutingConfig">
        <property name="templateService" ref="templateService"/>
      </bean>
    </constructor-arg>
  </bean>
  <bean id="zooKeeper" class="org.lilyproject.util.zookeeper.StateWatchingZooKeeper">
    <constructor-arg value="${zookeeper:connectString}"/>
    <constructor-arg value="${zookeeper:sessionTimeout}"/>
    <constructor-arg value="${zookeeper:startupTimeout}"/>
  </bean>
  <bean id="fetcherWorker" class="org.tokenizer.executor.worker.FetcherWorker">
    <constructor-arg ref="fetcherModel"/>
    <constructor-arg ref="zooKeeper"/>
  </bean>
  <bean id="fetcherModel" class="org.tokenizer.executor.model.impl.FetcherModelImpl">
    <constructor-arg ref="zooKeeper"/>
  </bean>
</beans>