<?xml version="1.0"?>
<html xmlns:t="http://kauriproject.org/template">
  <t:init>
    <t:variable name="sample_name" value="Commons"/>
    <t:variable name="home_link_uri" value="/"/>
    <t:variable name="about_link_uri" value="/about"/>
  </t:init>
  <head>
    <title>
      <t:block name="title">${sample_name}</t:block>
    </title>
    <t:include src="module:/templates/snippet/headerlinks.xml"/>
    <link rel="stylesheet" type="text/css"
      href="${publicUri('service:/main/static/css/default.css')}"/>
    <t:block name="extra-headers"/>
  </head>
  <body>
    <div class="container">
      <div id="header" class="column span-24 last">
        <t:block name="header">
          <t:import src="module:/templates/common/header.xml"/>
        </t:block>
      </div>
      <div id="main" class="column prepend-1 span-19 border">
        <t:block name="main"/>
      </div>
      <div id="menu" class="column span-4 last">
        <t:block name="menu"/>
      </div>
      <div id="footer" class="column span-24 last">
        <t:block name="footer">
          <t:import src="module:/templates/common/footer.xml"/>
        </t:block>
      </div>
    </div>
  </body>
</html>