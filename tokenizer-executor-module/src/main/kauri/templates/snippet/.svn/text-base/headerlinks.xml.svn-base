<?xml version="1.0"?>
<t:if test="${true}" 
    xmlns:t="http://kauriproject.org/template">
    
    <link rel="stylesheet" href="${publicUri('service:/main/screen.css')}" type="text/css" media="screen, projection" />
    <link rel="stylesheet" href="${publicUri('service:/main/print.css')}" type="text/css" media="print" />
    <!-- below statement escapes the commented <> marks, unless we fix #145
    <t:comment><![CDATA[[if IE]><link rel="stylesheet" href="${publicUri('service:/main/ie.css')}" type="text/css" media="screen, projection"><![endif]]]></t:comment>
    -->
    <!-- javascript workaround until fix for #145 -->
    <script type="text/javascript">
      if(navigator.appVersion.indexOf("MSIE") > -1) {
        var link = document.createElement("link");
        link.setAttribute("rel", "stylesheet");
        link.setAttribute("href", "${publicUri('service:/main/ie.css')}");
        link.setAttribute("type", "text/css");
        link.setAttribute("media", "screen, projection");
        if(document.getElementsByTagName("head")[0] != null) {
            document.getElementsByTagName("head")[0].appendChild(link);
        }
      }
    </script>
</t:if>