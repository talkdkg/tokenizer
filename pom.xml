<project
	xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
>
	<properties>
		<version.crawler-commons>0.1</version.crawler-commons>
		<version.httpclient>4.2.1</version.httpclient>
		<version.jaxrs>1.0</version.jaxrs>
		<version.kauri>0.4-RC2</version.kauri>
		<version.lily>1.2.1</version.lily>
		<version.restlet>svn6565</version.restlet>
		<version.slf4j>1.6.4</version.slf4j>
		<version.solr>4.0.0-BETA</version.solr>
		<version.spring>2.5.6</version.spring>
		<version.tika>1.2</version.tika>
	</properties>
	<modelVersion>4.0.0</modelVersion>
	<groupId>org.tokenizer</groupId>
	<artifactId>tokenizer</artifactId>
	<version>1.0-SNAPSHOT</version>
	<packaging>pom</packaging>
	<name>Kauri application: tokenizer</name>
	<modules>
		<module>main-module</module>
		<module>tokenizer-core</module>
	</modules>
	<repositories>
		<repository>
			<id>default</id>
			<name>Maven Repository Switchboard</name>
			<layout>default</layout>
			<url>http://repo1.maven.org/maven2</url>
			<snapshots>
				<enabled>false</enabled>
			</snapshots>
		</repository>
		<repository>
			<id>restlet</id>
			<url>http://maven.restlet.org/</url>
			<snapshots>
				<enabled>false</enabled>
			</snapshots>
		</repository>
		<repository>
			<id>kauri-deploy</id>
			<url>http://kauriproject.org/maven/maven2/deploy</url>
			<snapshots>
				<enabled>false</enabled>
			</snapshots>
		</repository>
	</repositories>
	<pluginRepositories>
		<pluginRepository>
			<id>kauri-deploy</id>
			<url>http://kauriproject.org/maven/maven2/deploy</url>
			<snapshots>
				<enabled>false</enabled>
			</snapshots>
		</pluginRepository>
	</pluginRepositories>
	<dependencyManagement>
		<dependencies>
			<dependency>
				<groupId>com.google.code.crawler-commons</groupId>
				<artifactId>crawler-commons</artifactId>
				<version>${version.crawler-commons}</version>
			</dependency>
			<dependency>
				<groupId>javax.ws.rs</groupId>
				<artifactId>jsr311-api</artifactId>
				<version>${version.jaxrs}</version>
			</dependency>
			<dependency>
				<groupId>org.apache.httpcomponents</groupId>
				<artifactId>httpclient</artifactId>
				<version>${version.httpclient}</version>
			</dependency>
			<dependency>
				<groupId>org.apache.solr</groupId>
				<artifactId>solr-solrj</artifactId>
				<version>${version.solr}</version>
			</dependency>
			<!-- TODO: replace Tika with direct calls to TagSoup -->
			<dependency>
				<groupId>org.apache.tika</groupId>
				<artifactId>tika-parsers</artifactId>
				<version>${version.tika}</version>
				<exclusions>
					<exclusion>
						<groupId>edu.ucar</groupId>
						<artifactId>netcdf</artifactId>
					</exclusion>
				</exclusions>
			</dependency>
			<dependency>
				<groupId>org.kauriproject</groupId>
				<artifactId>kauri-routing-api</artifactId>
				<version>${version.kauri}</version>
			</dependency>
			<dependency>
				<groupId>org.kauriproject</groupId>
				<artifactId>kauri-representationbuilder-api</artifactId>
				<version>${version.kauri}</version>
			</dependency>
			<dependency>
				<groupId>org.lilyproject</groupId>
				<artifactId>lily-import</artifactId>
				<version>${version.lily}</version>
			</dependency>
			<dependency>
				<groupId>org.restlet.jse</groupId>
				<artifactId>org.restlet</artifactId>
				<version>${version.restlet}</version>
			</dependency>
			<dependency>
				<groupId>org.slf4j</groupId>
				<artifactId>slf4j-api</artifactId>
				<version>${version.slf4j}</version>
			</dependency>
			<dependency>
				<groupId>org.slf4j</groupId>
				<artifactId>slf4j-log4j12</artifactId>
				<version>${version.slf4j}</version>
			</dependency>
			<dependency>
				<groupId>org.springframework</groupId>
				<artifactId>spring-beans</artifactId>
				<version>${version.spring}</version>
			</dependency>
		</dependencies>
	</dependencyManagement>
	<build>
		<resources>
			<resource>
				<directory>src/main/resources</directory>
			</resource>
			<resource>
				<directory>src/main/kauri</directory>
				<targetPath>KAURI-INF</targetPath>
			</resource>
		</resources>
		<pluginManagement>
			<plugins>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-compiler-plugin</artifactId>
					<version>2.0.2</version>
					<configuration>
						<source>1.5</source>
						<target>1.5</target>
					</configuration>
				</plugin>
				<plugin>
					<groupId>org.kauriproject</groupId>
					<artifactId>kauri-genclassloader-plugin</artifactId>
					<version>${version.kauri}</version>
					<executions>
						<execution>
							<phase>compile</phase>
							<goals>
								<goal>generate</goal>
							</goals>
						</execution>
					</executions>
				</plugin>
				<plugin>
				<!-- 
					http://wiki.eclipse.org/M2E_plugin_execution_not_covered
				 -->
					<groupId>org.eclipse.m2e</groupId>
					<artifactId>lifecycle-mapping</artifactId>
					<version>1.0.0</version>
					<configuration>
						<lifecycleMappingMetadata>
							<pluginExecutions>
								<pluginExecution>
									<pluginExecutionFilter>
										<groupId>org.kauriproject</groupId>
										<artifactId>kauri-genclassloader-plugin</artifactId>
										<versionRange>[${version.kauri},)</versionRange>
										<goals>
											<goal>generate</goal>
										</goals>
									</pluginExecutionFilter>
									<action>
										<execute>
											<runOnIncremental>false</runOnIncremental>
										</execute>
									</action>
								</pluginExecution>
							</pluginExecutions>
						</lifecycleMappingMetadata>
					</configuration>
				</plugin>
			</plugins>
		</pluginManagement>
		<plugins>
			<plugin>
				<groupId>org.kauriproject</groupId>
				<artifactId>kauri-package-plugin</artifactId>
				<version>${version.kauri}</version>
				<inherited>false</inherited>
				<configuration>
					<confDirectory>${basedir}/conf</confDirectory>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<source>1.6</source>
					<target>1.6</target>
					<compilerVersion>1.6</compilerVersion>
					<encoding>UTF-8</encoding>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>